

model Application.Models.MovieDetailsModel


<div class="container text-center">

  <div class="row">
    <div class="col"  style="float: left; display: inline-block;">
        <img src="@Model.PosterUrl" alt="img" width="500" height="600">
    </div>
    <div class="col">
     
      <h2>@Model.Title </h2>
     
      <h6>@Model.Tagline </h6>
      <h5>@Model.RunTime m / @Model.ReleaseDate.Year


          @foreach(var genre in @Model.Genres){
               <span class="badge bg-secondary">@genre.Name</span>
          }
      
             
         
      </h5>   
         


   <button type="button" class="btn btn-primary">
       RATING
    </button>

      <h6>@Model.Overview </h6>


    </div>
    <div class="col">
<a  asp-controller="Movies"  asp-action="ConfirmationPage"class="btn btn-default"><i class="fa fa-edit"></i>

     <button type="button" class="btn btn-outline-dark">Review</button>
    </a>

      <br />
      <br />
      <div>

      </div>
      <a  asp-controller="Movies"  asp-action="ConfirmationPage"class="btn btn-default"><i class="fa fa-edit"></i>
              <button type="button" class="btn btn-outline-dark">BUY @Model.Price</button>
       </a>

    
    </div>
  </div>

    <div class="row">
    <div class="col">
        <h2>MOVIE FACTS</h2>
        <ul class="list-group">
            <li class="list-group-item">Release Date <span class="badge bg-secondary">@Model.ReleaseDate</span> </li>
             <li class="list-group-item">Run Time <span class="badge bg-secondary">@Model.RunTime m</span> </li>
             <li class="list-group-item">Box office<span class="badge bg-secondary"> $@Model.Revenue</span> </li>
            <li class="list-group-item">Budget <span class="badge bg-secondary">$@Model.Budget</span> </li>
         
        </ul>
    
    </div>
    <div class="col">
      <h2>CAST</h2>

       @foreach(var cast in @Model.casts){
            <ul class="list-group list-group-horizontal">
                <li class="list-group-item">IMG</li>
                <li class="list-group-item">@cast.Name</li>
                <li class="list-group-item">@cast.Character</li>
            </ul>
       }
     

    </div>
  </div>  

</div>